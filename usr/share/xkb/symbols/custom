partial modifier_keys
xkb_symbols "remap" {
    replace key <CAPS> { [ Control_L ] };
    replace key <LCTL> { [ Escape ] };
    replace key <ESC>  { [ Caps_Lock ] };
    modifier_map Control { <CAPS> };
    modifier_map Lock { <ESC> };
};

partial modifier_keys
xkb_symbols "ctrl_tab_toggle" {
    key <TAB> {[ Tab,  ISO_Next_Group  ], type[group1] = "PC_CONTROL_LEVEL2" };
};
