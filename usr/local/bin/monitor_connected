#!/bin/sh

dell_edid=''

port_edids=$(xrandr -q --verbose | awk '
/ connected / {
   port=$1
}
/EDID:/ {
   printf "%s ", port
   for(i=0; i<16;++i) {
      getline;
      printf "%s", $1
   }
   printf "\n"
}
}')

echo $port_edids | while read -r port edid; do
   if [ "$edid" = "$dell_edid" ]; then
      xrandr --output "$port" --scale 1.2x1.2      
   fi
done

